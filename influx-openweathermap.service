[Unit]
Description=OpenWeatherMap Data Collector

[Service]
Type=idle
User=grafana
Group=grafana
WorkingDirectory=/home/grafana/influx-openweathermap
ExecStart=/usr/bin/python3 openweathermap.py

# Timeout for start up/shut down
#TimeoutSec=300

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
